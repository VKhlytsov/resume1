<div class="row pb-3 border-bottom">
<span class="fs-5 fw-normal py-3">{{title}}</span>
{{#if input}}
<div class="col-12 pb-4 pt-1">
<input class="form-control" type="text" placeholder="{{input.placeholder}}" aria-label="search">
</div>
{{/if}}

{{#with range}}
<div class="col-12 pb-4 pt-1">
<input class="form-control" type="text" placeholder="{{from}}" aria-label="search">
</div>
<div class="col-12 pb-4 pt-1">
<input class="form-control" type="text" placeholder="{{to}}" aria-label="search">
</div>
{{/with}}

{{#with button}}
<div class="col-10">
<a type="button" class="btn btn-outline-secondary col-2 " href="{{link}}">{{text}}</a>
</div>
{{/with}}

{{#if list}}
{{#each list}}
<div class="form-check ms-3 py-1">
<label class="form-check-label" for="brand">{{value}}</label>  
<input class="form-check-input" type="checkbox" value="{{value}}" id="brand">
</div>
{{/each}}
{{/if}}
{{#if options}}
{{#each options}}
<div class="form-check ms-3 py-1">
<label class="form-check-label" for="brand">{{value}}</label>  
<input class="form-check-input" type="checkbox" value="{{value}}" id="brand">
</div>
{{/each}}
{{/if}}
</div>