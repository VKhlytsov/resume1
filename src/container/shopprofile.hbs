<main>

<p class="fs-1 fw-semibold me-2">{{header}}</p>

<div>
{{#with purchase}}
<ul class="nav nav-tabs">
{{#each tabs}}  
{{#if @first}}
<li class="nav-item">
<a class="nav-link active fw-semibold" aria-current="page" href="#">{{this}}</a>
</li>
{{/if}}
{{#if @last}}
<li class="nav-item">
<a class="nav-link" href="#">{{this}}</a>
</li>
{{/if}}
{{/each}}
{{/with}}
</div>

<div class="row mt-3 mb-5">
<div class="col-5 position-absolute g-1">  
{{#with purchase.actionBlock.input}}
<div class="col-12 input-group position-absolute mb-3">
<input type="text" class="form-control rounded m-2 mb-3" placeholder="{{placeholder}}">
{{/with}}
{{#with  purchase.actionBlock}}
{{#each buttons}}
{{#if isSuccess}}
<button href="{{link}}" class="input-group-text btn btn-success fw-semibold rounded m-2 mb-3" type="button">{{text}}</button>
{{/if}}
{{#if isOutline}}
<button href="{{link}}" class="btn btn-outline-success fw-semibold rounded m-2 mb-3" type="button">{{text}}</button>
{{/if}}
{{#if isDanger}}
<button href="{{link}}" class="btn btn-outline-danger fw-semibold rounded m-2 mb-3" type="button">{{text}}</button>
{{/if}}
{{/each}}
</div>
{{/with}}
</div>
</div>
<div class="border-bottom border-3 pb-3"></div>


<div class="row col-12 container-fluid p-3 g-1">
{{#with purchase}}
{{#each itemList}}
{{> purchaseItem}}
{{/each}}
{{/with}}
</div>

