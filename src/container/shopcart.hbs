<main>
{{#with header}}
<p class="fs-1 fw-semibold me-2">{{title}}</p>
{{#with button}}
<a type="btn" class="btn btn-outline-secondary py-2 my-1 mb-4" href="{{link}}">{{text}}</a>
{{/with}}
{{/with}}
<hr>
{{>cartGoodsItem}}
<hr>
<div class="row my-2 py-2 mb-4">
{{#with total}}
<p class="fs-4 fw-medium py-0 my-0">{{title}}</p>
<p class="fs-1 fw-medium py-0 my-0">{{amount}}</p>
<p class="py-0">{{delivery}}</p>
<div class="col-5">
{{#each buttons}}
<div class="row">
<ol class="nav nav-item">
{{#if isSuccess}}
<li class="nav-link px-2"> <a class="btn btn-success px-2 mx-0" href="{{link}}">{{text}}</a></li> 
{{/if}}
{{#if isOutline}}
<li class="nav-link px-2"> <a class="btn btn-outline-success px-2" href="{{link}}">{{text}}</a></li>
{{/if}}
</ol> 
</div>
{{/each}}
</div>
{{/with}}
</div>
<hr>
{{>shopcard}}
<hr>
{{>cartSubscribe}}
<hr>
</main>