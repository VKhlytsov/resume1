<main>

<div class="row g-1">

<div class="col-6">
<div class="container">

{{> breadcrumb}}

{{#with productData}}

<div class="row ps-1 pe-2">
<div class="col-12">
<div class="card">
<img class="card-img-top"  src="{{img}}" alt="Зображення">
</div>
              
</div>
</div>
            
<div class="row ms-1 me-2 mt-4">
{{#with info}}
<div class="card pt-3 px-3">
<div class="card-body p-1">
<p class="card-title fs-4 fw-bolder">{{title}}</p>
<p class="card-text">{{about}}</p>
<em class="text-body-secondary fw-bold fs-3">{{price}}</em>

<div class="col-5">
<div class="row border-top pt-2 ps-2 mb-2">
{{#each category}} 
{{#if isHot}} 
<div class="col-1 me-2">
<span class="badge rounded-pill bg-warning"> {{name}}  </span> </div>          
{{/if}}  
{{#if isNew}}     
<div class="col-1 mx-3"> 
<span class="badge rounded-pill bg-primary"> {{name}}  </span>    </div>     
{{/if}}
{{#if isBonus}}    
<div class="col-1 mx-2"> 
<span class="badge rounded-pill bg-info"> {{name}}  </span>    </div>      
{{/if}}
{{/each}}
</div>
</div>
</div>
</div>
</div>
{{/with}}
</div>
</div>
{{/with}}

<div class="col-1">
<div class="row">
</div>
</div>


<div class="col-5">
<div class="row">
<div class="col-12 py-4 ">
</div>
</div>

{{#with productData}}
<div class="container mt-2">
             
{{#with item}}
<table class="table border table-striped">
<thead>
<tr class="border">
{{#each head}}
<th scope="col">{{this}}</th>
{{/each}}
</tr>
</thead>
<tbody>
{{#each body}}
<tr>
<th class="border" scope="row">{{this.[0]}}</th>
<td>{{this.[1]}}</td>
<td>{{this.[2]}}</td>
</tr>
{{/each}}
</tbody>
</table>
{{/with}}
</div>
       
<div class="container pt-2">
<div class="card" >    
{{#with param}}
<div class="card-header">
<p class="fs-4">{{title}}:</p>
</div>
<ul class="list-group list-group-flush">
{{#each list}}
<li class="list-group-item"><div class="fw-normal">{{this}}</div></li>
{{/each}}
</ul>
{{/with}}
</div>
</div>
{{/with}}

{{#with productData.alert}}
{{#if isError}} 
<div class="alert alert-danger alert-dismissible fade fw-medium show mt-3" role="alert">
{{text}}
</div>
{{/if}}
{{/with}}
</div>
</div>

<div class="row">
<div class="container">

<div class="card mt-3">
<div class="card-body"> 
{{#with productData}}
{{#each actionList}}
{{#if isWarning}} <button type="button" class="btn btn-warning text-light px-5">{{name}}</button>
{{/if}}
{{#if isError}}
<button type="button" class="btn btn-outline-danger fw-semibold px-4 mx-2">{{name}}</button>
{{/if}}
{{#if isSuccess}}
<button type="button" class="btn btn-success px-5 mx-2">{{name}}</button>  
{{/if}}
{{#if isGood}}
<button type="button" class="btn btn-outline-success fw-semibold px-4 mx-2">{{name}}</button>
{{/if}}
{{/each}}
{{/with}}
</div>
</div>
</div>
</div>

{{>shopcard}}

{{>shopaction}}


</main>